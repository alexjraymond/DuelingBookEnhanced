{
  "manifest_version": 3,

  "name": "DuelingBookEnhanced",
  "description": "a Chrome extension to bring QOL additions to DuelingBook.com",
  "version": "1.0",

  "options_ui": {
    "page": "options.html"
  },

  "action": {
    "default_popup": "popup.html"
  },

  "icons": {
    "32": "dbe_logo_32.png",
    "64": "dbe_logo_64.png",
    "128": "dbe_logo.png"
  },

  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["js/vendor.js", "js/content_script.js", "js/components/Button.js"]
      }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": [
    "storage"
  ],

  "host_permissions": [
    "http://www.DuelingBook.com/html5"
  ]
}
