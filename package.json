{
  "name": "chrome-extension-typescript-starter",
  "version": "1.0.0",
  "description": "chrome-extension-typescript-starter",
  "main": "index.js",
  "scripts": {
    "start": "webpack serve --config webpack/webpack.dev.js",
    "watch": "webpack --config webpack/webpack.dev.js --watch",
    "build": "npx tsc && webpack --config webpack/webpack.prod.js && npm run build:tailwind",
    "build:tailwind": "npx tailwindcss build -i src/styles/tailwind.css -o dist/css/output.css",
    "clean": "rimraf dist",
    "test": "npx jest",
    "style": "prettier --write \"src/**/*.{ts,tsx}\""
  },
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/chibat/chrome-extension-typescript-starter.git"
  },
  "dependencies": {
    "fs": "^0.0.1-security",
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.11.0"
  },
  "devDependencies": {
    "@types/chrome": "0.0.158",
    "@types/jest": "^29.5.0",
    "@types/lodash": "^4.14.198",
    "@types/react": "^18.0.29",
    "@types/react-dom": "^18.0.11",
    "copy-webpack-plugin": "^9.1.0",
    "css-loader": "^6.8.1",
    "file-loader": "^6.2.0",
    "glob": "^7.1.6",
    "jest": "^29.5.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2 ",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^8.0.0",
    "typescript": "^5.2.2",
    "webpack": "^5.76.0",
    "webpack-cli": "^4.0.0",
    "webpack-dev-server": "^4.15.1",
    "webpack-merge": "^5.0.0"
  }
}
